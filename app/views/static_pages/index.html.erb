<section class="sign-up">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="heading">
          <h2><%= t "static_pages.index.sign_up" %></h2>
        </div>
      </div>
    </div>
    <%= form_tag email_information_index_path, method: :post, id: "contact" do %>
      <div class="row">
        <div class="col-md-4 col-md-offset-3">
          <fieldset>
            <%= text_field_tag :email, nil, placeholder: t("static_pages.send_email.placeholder_email"), class: "form-control", id: "email" %>
          </fieldset>
        </div>
        <div class="col-md-2">
