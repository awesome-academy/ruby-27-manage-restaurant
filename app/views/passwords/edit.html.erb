<div class="container fix-footer">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header"><h3 class="text-center font-weight-light my-4"><%=t "reset_pass.edit_password_reset_title" %></h3></div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :patch }) do |f| %>
            <%= render "shared/error_messages", object: resource %>
            <%= f.hidden_field :reset_password_token %>
            <div class="form-group">
              <%= f.label :password, t("reset_pass.password"),class: "small mb-1" %>
              <%= f.password_field :password, class: "form-control py-4" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, t("reset_pass.password_confirm"),class: "small mb-1" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit t("reset_pass.edit_password_reset_submit"), class: "btn btn-primary submit" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
