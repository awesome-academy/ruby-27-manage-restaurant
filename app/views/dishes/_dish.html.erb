<div class="col-md-3">
  <div class="dish panel panel-default">
    <div class="image-wrapper">
      <%= link_to (image_tag dish.images.first.image.url, alt: "#{dish.name}"), dish_path(dish) %>
    </div>
    <div class="panel-body">
      <h3><%= dish.name %></h3>
      <hr>
      <div class="row price">
        <div class="col-md-3 text"><%= t "dinner_tables.show.price" %>:</div>
        <div class="col-md-9 text-right"><span class="text-success"><%= number_to_currency dish.price %></span></div>
      </div>
      <div class="description">
        <span><%= t "dishes.description" %>:</span><br>
        <span><%= dish.description %></span>
      </div>
    </div>
  </div>
</div>
