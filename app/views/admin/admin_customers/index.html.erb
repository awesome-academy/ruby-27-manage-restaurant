<div class="list">
  <h1><%= t "admin_customer.all_customer" %></h1>
</div>
<div class="admin_customer_form">
  <%= search_form_for @search_customer, url: admin_admin_customers_path,method: :get, class: "form-inline" do |f|%>
    <%= f.text_field :name_cont, placeholder: t("admin_customer.placeholder_name"), class: "form-control" %>
    <%= f.text_field :email_cont, placeholder: t("admin_customer.placeholder_email"), class: "form-control" %>
    <%= f.text_field :address_cont, placeholder: t("admin_customer.placeholder_address"), class: "form-control" %>
    <%= f.submit t("admin_customer.button_search"), class: "form-control" %>
  <% end %>
  <div class="trash_soft_delete">
    <%= link_to "?deleted_at=1", class: "btn btn-warning" do %>
      <i class="fas fa-trash-restore-alt"></i>[<%= User.only_deleted.size %>]
    <% end %>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= t "admin_customer.id" %></th>
      <th scope="col"><%= sort_link @search_customer, :name, t("admin_customer.name") %></th>
      <th scope="col"><%= sort_link @search_customer, :email, t("admin_customer.email") %></th>
      <th scope="col"><%= t "admin_customer.phone" %></th>
      <th scope="col"><%= sort_link @search_customer, :address, t("admin_customer.address") %></th>
      <th scope="col"><%= t "admin_customer.status" %></th>
      <th scope="col"><%= t "admin_customer.action" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "admin_customers", collection: @admin_customers %>
  </tbody>
</table>
<%= paginate @admin_customers, theme: "twitter-bootstrap-3"%>
<%= link_to t("admin_customer.back"), admin_admin_customers_path , class: "btn btn-outline-info" %>
