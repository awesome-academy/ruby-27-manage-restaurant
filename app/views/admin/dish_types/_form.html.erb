<%= form_for [:admin, @dish_type] do |f| %>
  <%= render "admin/shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :name, t("dish_types.name"), class: "small mb-1" %>
    <%= f.text_field :name, class: "form-control py-4" %>
  </div>
  <div class="form-group">
    <%= f.label :description, t("dish_types.description"), class: "small mb-1" %>
    <%= f.text_area :description, class: "form-control py-4" %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
