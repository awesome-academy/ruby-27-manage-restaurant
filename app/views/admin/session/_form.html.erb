<%= form_for :session, url: admin_login_path do |f| %>
  <div class="form-group">
    <%= f.label :email, t(".email"), class: "small mb-1" %>
    <%= f.email_field :email, class: "form-control py-4" %>
  </div>
  <div class="form-group">
    <%= f.label :password, t(".password"), class: "small mb-1" %>
    <%= f.password_field :password, class: "form-control py-4" %>
  </div>
  <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
    <%= f.submit t(".submit"), class: "btn btn-primary" %>
  </div>
<% end %>

