<tr class="row-dp row-user-<%= user.id %>">
  <th class="row-id"></th>
  <td class="name"><%= user.name %></td>
  <td class="description"><%= user.department.name %></td>
  <td class="status">
    <%= link_to t(".show"), [:admin, user], "data-toggle": "modal", "data-target": "#myModal-show-user-#{user.id}", class: "btn btn-primary" %>
    <%= link_to t(".edit"), edit_admin_user_path(user), remote: true, class: "btn btn-warning" %>
    <%= link_to t(".delete"), [:admin, user], method: :delete, class: "btn btn-danger destroy", data: {id: user.id} %>
  </td>
</tr>
<div class="modal" id="myModal-show-user-<%= user.id %>">
  <%= render "show", user: user %>
</div>
