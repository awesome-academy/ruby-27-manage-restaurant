$('ul.errors').html('')
$('.notification').html('')
<% if @department.errors.any? %>
  <% @department.errors.full_messages.each do |message| %>
    $('ul.errors').append($('<li />').html('<%= message.html_safe %>'))
  <% end %>
  $('.notification').append('<div class="alert alert-danger"><%= t ".danger" %></div>')
<% else %>
  $('.row-department-<%= @department.id %>').find('.name').html('<%= @department.name %>')
  $('.row-department-<%= @department.id %>').find('.description').html('<%= @department.description %>')
  $('#myModal').modal('hide')
  $('.notification').append('<div class="alert alert-success"><%= t ".success" %></div>')
<% end %>
