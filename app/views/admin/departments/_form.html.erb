<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title"><%= yield(:button_text) %></h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <%= form_for [:admin, @department], remote: true do |f| %>
        <div class="form-group">
          <%= f.label :name, t("admin.departments.new.name") %>
          <%= f.text_field :name, class: "form-control" %>
          <p class="error-name reset-error"></p>
        </div>
        <div class="form-group">
          <%= f.label :description, t("admin.departments.new.description") %>
          <%= f.text_area :description, class: "form-control", rows: Settings.form.text_area_rows %>
          <p class="error-description reset-error"></p>
        </div>

        <div class="modal-footer">
          <%= f.submit t("admin.departments.department.submit"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
