<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Modal Heading</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <%= form_for [:admin, @department], remote:true do |f| %>
          <%= render "admin/shared/error_messages", object: f.object %>
          <div class="form-group">
            <%= f.label :name, t("admin.departments.new.name") %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :description, t("admin.departments.new.description") %>
            <%= f.text_area :description, class: "form-control", rows: Settings.form.text_area_rows %>
          </div>

          <div class="modal-footer">
            <%= f.submit "Submit", class: "btn btn-primary" %>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
